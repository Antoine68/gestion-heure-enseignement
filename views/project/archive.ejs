<% layout("template.ejs") %>
    <div class="text-content">
        <h2 class="title has-text-centered">Liste des projets archivés</h2>
        <div class="btn-center">
            <a class="button" href="/projets">Retour aux projets</a>
        </div>
        <ul>
            <% for (let i=0; i < projects.length; i++) { %>
                <li class="folder-container" style="margin-bottom: 0;">
                    <div class="folder">
                        <div class="is-pulled-left">
                            <i class="btn-folder fas fa-folder"></i>Titre: <%= projects[i].title %> <i class="fas fa-arrow-right"></i> Année: <%= projects[i].start_year %> - <%= projects[i].end_year %>
                        </div>
                        <div class="is-pulled-right">
                            <form style="display: inline-block;" action="/projets/restore/<%= projects[i]._id _%>" method="post">
                                <button class="button-link" title="Restaurer"><i class="fas fa-undo-alt"></i></button>
                            </form>
                        </div>
                    </div>
                </li>
            <%}%>
        </ul>
    </div>